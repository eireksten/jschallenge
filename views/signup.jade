extends layout

block content
  section.signup
    h4 Register User
    div.message= message
    form(action="/signup", method="post")
      input(type="text", name="username", placeholder="Username", autofocus="autofocus")
      input(type="password", name="password", placeholder="Password")
      span
        a(href="/")= "Go to login"
        button(type="submit")= "Sign up"